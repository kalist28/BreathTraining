<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/end_training"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingTop="8sp"/>

                <TextView
                    android:id="@+id/activity_finishing_name_training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="8sp"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="true"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/activity_finishing_parameters_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:background="#E2F7FAFA"
            android:padding="10sp"
            android:textSize="18sp" />

        <com.kalistdev.breathtraining2.widget.StarsManager
            android:id="@+id/StarsManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.kalistdev.breathtraining2.widget.StarsManager>

        <TextView
            android:id="@+id/activity_finishing_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сегодня ты тренеровался: 10 мин."
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:background="#E2F7FAFA"
            android:padding="10sp"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/activity_finishing_opinion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="start"
                    android:lines="2"
                    android:maxLines="5"
                    android:minLines="2"
                    android:hint="Расскажи свои впечитления"
                    android:paddingTop="8sp"
                    android:paddingBottom="8dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:inputType="textImeMultiLine"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>
